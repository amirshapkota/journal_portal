# Journal Portal Environment Configuration

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=journal_portal
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
# Options: 
#   Development: django.core.mail.backends.console.EmailBackend (prints to console)
#   Testing: django.core.mail.backends.filebased.EmailBackend (saves to files)
#   Production: django.core.mail.backends.smtp.EmailBackend (sends via SMTP)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# --- Gmail Configuration ---
# 1. Enable 2-Step Verification in Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password below (NOT your regular password)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-char-app-password

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com


# Default sender email (used when no from_email specified)
DEFAULT_FROM_EMAIL=noreply@journal-portal.com

SUPERUSER_EMAIL=your_email
SUPERUSER_PASSWORD=password

# ORCID Configuration (Production - use sandbox.orcid.org for testing)
ORCID_CLIENT_ID=your_orcid_client_id
ORCID_CLIENT_SECRET=your_orcid_client_secret
ORCID_API_BASE_URL=https://api.orcid.org
ORCID_AUTH_URL=https://orcid.org/oauth/authorize
ORCID_TOKEN_URL=https://orcid.org/oauth/token

# OJS Configuration
OJS_API_BASE_URL=https://your-ojs-instance.com/api/v1
OJS_API_KEY=your_ojs_api_key

# iThenticate Configuration
ITHENTICATE_API_URL=https://api.ithenticate.com
ITHENTICATE_API_KEY=your_ithenticate_api_key

SENTRY_API_BASE_URL='https://sentry.io/api/0'  # Default value
SENTRY_AUTH_TOKEN=auth_token
SENTRY_ORG_SLUG=slug